int up(state[SDL_SCANCODE_UP])
{
  printf("UP\n");
  return(dir = UP);
}
int down(state[SDL_SCANCODE_DOWN])
{
  printf("DOWN\n");
  return (dir = DOWN);
}
int left(state[SDL_SCANCODE_LEFT])
{
  printf("LEFT\n");
  return (dir = LEFT);
}
int right (state[SDL_SCANCODE_RIGHT])
{
  printf("RIGHT\n");
  return (dir = RIGHT);
}

int espace(state[SDL_SCANCODE_ESCAPE])
{
  printf("ESC\n");
  exit(0);
}
